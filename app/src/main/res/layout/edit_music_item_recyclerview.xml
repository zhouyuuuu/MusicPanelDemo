<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/edit_music_item_rl_height"
    android:layout_marginEnd="@dimen/edit_music_item_rl_margin_right"
    android:layout_marginLeft="@dimen/edit_music_item_rl_margin_left"
    android:layout_marginRight="@dimen/edit_music_item_rl_margin_right"
    android:layout_marginStart="@dimen/edit_music_item_rl_margin_left"
    android:layout_marginTop="@dimen/edit_music_item_rl_margin_top"
    android:background="@color/edit_music_item_bg">

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/edit_music_item_song_tv_margin_right"
        android:layout_marginLeft="@dimen/edit_music_item_song_tv_margin_left"
        android:layout_marginRight="@dimen/edit_music_item_song_tv_margin_right"
        android:layout_marginStart="@dimen/edit_music_item_song_tv_margin_left"
        android:layout_marginTop="@dimen/edit_music_item_song_tv_margin_top"
        android:lineSpacingExtra="0sp"
        android:textColor="@color/edit_music_name_song_text_undownloaded"
        android:textSize="@dimen/edit_music_item_song_tv_textsize"
        tools:text="Youâ€™re beautiful" />

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/edit_music_item_author_tv_margin_right"
        android:layout_marginLeft="@dimen/edit_music_item_author_tv_margin_left"
        android:layout_marginRight="@dimen/edit_music_item_author_tv_margin_right"
        android:layout_marginStart="@dimen/edit_music_item_author_tv_margin_left"
        android:layout_marginTop="@dimen/edit_music_item_author_tv_margin_top"
        android:lineSpacingExtra="0sp"
        android:textColor="@color/edit_music_name_author_text"
        android:textSize="@dimen/edit_music_item_author_tv_textsize"
        tools:text="James Blunt" />

    <com.example.administrator.musiceditingpanelproject.widget.DownloadPausedIconView
        android:id="@+id/download_paused_view"
        android:layout_width="@dimen/edit_music_item_downloadview_width"
        android:layout_height="@dimen/edit_music_item_downloadview_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/edit_music_item_downloadview_margin" />

    <com.example.administrator.musiceditingpanelproject.widget.DownloadIconView
        android:id="@+id/download_view"
        android:layout_width="@dimen/edit_music_item_downloadview_width"
        android:layout_height="@dimen/edit_music_item_downloadview_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/edit_music_item_downloadview_margin" />

    <com.example.administrator.musiceditingpanelproject.widget.IndeterminateProgressBar
        android:id="@+id/indeterminate_progress_bar"
        android:layout_width="@dimen/edit_music_item_progressbar_width"
        android:layout_height="@dimen/edit_music_item_progressbar_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/edit_music_item_progressbar_margin" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="@dimen/edit_music_item_edit_tv_width"
        android:layout_height="@dimen/edit_music_item_edit_tv_height"
        android:layout_centerInParent="true"
        android:background="@drawable/edit_btn_edit_bg"
        android:gravity="center"
        android:text="@string/edit_play"
        android:textColor="@color/edit_music_close_text"
        android:textSize="@dimen/edit_music_item_edit_tv_textsize" />

</RelativeLayout>

